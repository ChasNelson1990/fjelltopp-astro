---
import { Image } from "astro:assets";
import decorForm from "../../assets/pics/contact-jb.jpg";
---

<div
  class="flex relative justify-between items-center p-[60px] bg-gray rounded-[45px] overflow-hidden"
>
  <form class="bg-gray sm:p-6 h-full w-full lg:mr-[60px]">
    <div class="mb-4">
      <label for="name" class="block text-black mb-2">Name*</label>
      <input
        type="text"
        id="name"
        name="name"
        placeholder="Name"
        class="w-full px-[30px] py-[18px] border border-black rounded-[14px] text-black outline-hidden"
      />
    </div>

    <div class="mb-4">
      <label for="email" class="block text-black mb-2">Email*</label>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Email"
        class="w-full px-[30px] py-[18px] border border-black rounded-[14px] text-black outline-hidden"
      />
    </div>

    <div class="mb-4">
      <label for="message" class="block text-black mb-2">Message*</label>
      <textarea
        id="message"
        name="message"
        placeholder="Message"
        class="w-full px-[30px] py-[18px] border border-black rounded-[14px] text-black outline-hidden"
      ></textarea>
    </div>

    <button type="submit" name="submit" class="btn-primary w-full">Send</button>
  </form>
  <picture class="md:w-6/12 md:pb-20 md:pt-10 hidden lg:block">
    <Image src={decorForm} alt="A member of the Fjelltopp team looking ready to receive your query" />
  </picture>
</div>
