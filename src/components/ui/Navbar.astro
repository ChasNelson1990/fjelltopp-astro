---
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems } from "astro-navbar";

import { getCollection } from 'astro:content';
import type { CollectionEntry } from "astro:content";

const allServices: CollectionEntry<'services'>[] = (await getCollection('services'))
  .sort((a:CollectionEntry<'services'>, b:CollectionEntry<'services'>) => a.data.order - b.data.order);

const menuitems = [
  { href: '/about', label: 'About us', dropdown: false, dropdownContent: [] },
  { href: '/services', label: 'Services', dropdown: true, dropdownContent: allServices },
  { href: '/#cases', label: 'Use Cases', dropdown: false, dropdownContent: [] },
  { href: '/pricing', label: 'Pricing', dropdown: false, dropdownContent: [] },
  { href: '/articles', label: 'Blog', dropdown: false, dropdownContent: [] },
];

const navButton = { href: 'https://github.com/manulthanura/Fjelltopp', label: 'Book a consultation' };
---

<div class="mt-20">
  <nav class="w-full top-0 left-0 z-50 fixed bg-white">
    <header class="flex flex-col lg:flex-row justify-between items-center my-5 px-6 md:px-32">
      <Astronav>
        <div class="flex w-full lg:w-auto items-center justify-between">
          <a href="/fjelltopp-astro/" class="flex items-center space-x-3 rtl:space-x-reverse">
            <img src="/fjelltopp-astro/Logo.svg" class="h-16" alt="Logo" />
          </a>
          <MenuIcon class="w-8 h-8 text-[var(--dark)] cursor-pointer lg:hidden">
        </div>
        
        <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
          <ul class="font-medium flex flex-col lg:p-0 mt-4 border rounded-lg lg:flex-row lg:space-x-8 lg:mt-0 lg:border-0">
            {menuitems.map((item, _) => (
              <li>
                {!item.dropdown ?
                  <a 
                    href={`/fjelltopp-astro${item.href}`}
                    class="mobile-nav-link block text-[var(--dark)] rounded lg:bg-transparent lg:p-1 hover:bg-[var(--dark)] hover:text-white"
                    data-close-menu="true"
                  >
                    {item.label}
                  </a>
                :
                  <Dropdown class="group">
                    <button
                      class="mobile-nav-link block text-[var(--dark)] rounded lg:bg-transparent lg:p-1 hover:bg-[var(--dark)] hover:text-white"
                      style="display: flex; align-items: center; gap: 2px;"
                    >
                      <span>{item.label}</span>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4">
                        <path fill-rule="evenodd" d="M8 2a.75.75 0 0 1 .75.75v8.69l3.22-3.22a.75.75 0 1 1 1.06 1.06l-4.5 4.5a.75.75 0 0 1-1.06 0l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.22 3.22V2.75A.75.75 0 0 1 8 2Z" clip-rule="evenodd" />
                      </svg>
                    </button>
                    <DropdownItems>
                      <div class="lg:absolute lg:top-0 rounded bg-white lg:mt-[71px]">
                        {item.dropdownContent.map((subItem, _) => (
                          <a 
                            href={`/fjelltopp-astro${item.href}/${subItem.id}`}
                            class="mobile-nav-link block text-[var(--dark)] rounded lg:bg-transparent lg:p-1 lg:ml-0 md:ml-4 sm:ml-4 hover:bg-[var(--dark)] hover:text-white"
                            data-close-menu="true"
                          >
                            {subItem.data.title}
                          </a>
                        ))}
                      </div>
                    </DropdownItems>
                  </Dropdown>
                }
              </li>
            ))}
            <div class="lg:hidden flex items-center justify-center mt-3 gap-4">
              <a 
                class="mobile-nav-link px-9 py-5 rounded-2xl border border-[var(--dark)] bg-white hover:bg-[var(--dark)] text-[var(--dark)] hover:text-white inline-flex" 
                href={navButton.href}
                data-close-menu="true"
              >
                <h2 class="text-center text-xl font-normal leading-7">{navButton.label}</h2>
              </a>
            </div>
          </ul>
        </MenuItems>
      </Astronav>

      <div>
        <div class="hidden lg:flex items-center gap-4">
          <a class="px-9 py-5 rounded-2xl border border-[var(--dark)] bg-white hover:bg-[var(--dark)] text-[var(--dark)] hover:text-white inline-flex" href={navButton.href}>
            <h2 class="text-center text-xl font-normal leading-7">{navButton.label}</h2>
          </a>
        </div>
      </div>
    </header>
  </nav>
</div>
