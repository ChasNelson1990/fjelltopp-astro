---
import MainLayout from "../../layouts/MainLayout.astro";
import ArticleCard from "../../components/ui/ArticleCard.astro";
import SearchForm from "../../components/ui/SearchForm.astro";
import { getCollection } from 'astro:content';
import type { CollectionEntry } from "astro:content";

const allBlogArticles: CollectionEntry<'blog'>[] = (await getCollection('blog'))
  .sort((a:CollectionEntry<'blog'>, b:CollectionEntry<'blog'>) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

---

<MainLayout title="Fjelltopp - Blog">
	<main class="space-y-20">
            <div class="py-8 px-8 mx-auto max-w-(--breakpoint-xl) lg:py-16 lg:px-16">
                <div class="mx-auto max-w-(--breakpoint-sm) text-center lg:mb-16 mb-8">
                    <h1 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold">Our Blog</h1>
                    <p class="font-light sm:text-xl">We use an agile approach to test assumptions and connect with the needs of your audience early and often.</p>
                </div> 
                <br>
                <SearchForm />
                <br>
                <div class="grid gap-8 lg:grid-cols-2">
                    {allBlogArticles.map(article => (
                        <ArticleCard article={article} />
                    ))}
                </div>  
            </div>
	</main>
</MainLayout>
